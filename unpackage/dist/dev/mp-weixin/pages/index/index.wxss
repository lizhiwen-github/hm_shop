.home swiper {
  width: 750rpx;
  height: 380rpx;
}
.home swiper image {
  width: 100%;
  height: 100%;
}
.home .index-nav-wrapper {
  display: flex;
}
.home .index-nav-wrapper .index-nav-item {
  flex: 1;
  text-align: center;
}
.home .index-nav-wrapper .index-nav-item text {
  font-size: 30rpx;
}
.home .index-nav-wrapper .index-nav-item view {
  margin: 10px auto;
  width: 120rpx;
  height: 120rpx;
  background-color: #b50e03;
  border-radius: 60%;
  line-height: 120rpx;
  color: #fff;
  font-size: 50rpx;
}
.home .index-nav-wrapper .index-nav-item .icon-tupian {
  font-size: 45rpx;
}
.home .goods-wrapper {
  background-color: #eee;
  overflow: hidden;
}
.home .goods-wrapper .title {
  background-color: #fff;
  margin: 10rpx 0;
}
.home .goods-wrapper .title text {
  line-height: 50px;
  height: 50px;
  display: block;
  letter-spacing: 20px;
  text-align: center;
  overflow: hidden;
  color: #b50e03;
}
.home .goods-wrapper .goods-list {
  padding: 0 15rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.home .goods-wrapper .goods-list .goods-itme {
  background-color: #fff;
  width: 355rpx;
  margin: 10rpx 0;
  padding: 15rpx;
  box-sizing: border-box;
}
.home .goods-wrapper .goods-list .goods-itme image {
  width: 80%;
  height: 150px;
  display: block;
  margin: 0 auto;
}
.home .goods-wrapper .goods-list .goods-itme .price {
  margin: 15rpx 0;
  color: #b50e03;
  font-size: 36rpx;
}
.home .goods-wrapper .goods-list .goods-itme .price text:nth-child(2) {
  color: #ccc;
  font-size: 28rpx;
  margin-left: 17rpx;
  text-decoration: line-through;
}
.home .goods-wrapper .goods-list .goods-itme .goods-des {
  font-size: 25rpx;
  line-height: 45rpx;
  padding-bottom: 15rpx;
  padding-top: 10rpx;
}

